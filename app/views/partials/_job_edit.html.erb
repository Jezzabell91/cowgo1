<%= form_with(model: @job, local: true, class: "form") do |form| %>

<div class="field">
  <div class="label-div">
    <%= form.label :number_of_animals, class: "label"  %>
  </div>
  <div class="input-div">
    <%= form.number_field :head, required: true, min: 0, class: "input" %>
  </div>
</div>

<div class="field">
  <div class="label-div">
    <%= form.label :estimated_weight, class: "label"  %>
  </div>
  <div class="input-div">
    <%= form.number_field :weight, required: true, min: 0, class: "input" %>
  </div>
</div>

<div class="field">
    <div class="label-div">
        <%= form.label :instructions, class: "label"  %>
    </div>
    <div class="input-div">
        <%= form.text_area :instructions, placeholder: "Job instructions", required: false, class: "input" %>
    </div>
</div>

<div class="md:flex md:items-center">
  <div class="md:w-1/3"></div>
  <div class="md:w-2/3">
    <%= form.submit class: "btn" %>
  </div>
</div>

<% end %>