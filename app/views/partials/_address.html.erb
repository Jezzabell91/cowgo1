<%= form_with(model: [addressable, Address.new], local: true) do |form| %>

<div class="field">
    <h4>Address</h4>
  </div>

  <div class="field">
    <%= form.text_field :street_number, placeholder: "Street Number", required: true %>
  </div>

  <div class="field">
    <%= form.text_field :street_name, placeholder: "Street Name", required: true %>
  </div>

  <div class="field">
    <%= form.text_field :state, placeholder: "State", required: true %>
  </div>

  <div class="field">
    <%= form.text_field :postcode, placeholder: "Postcode", required: true %>
  </div>

  <div class="field">
    <%= form.text_field :country, placeholder: "Postcode", required: true %>
  </div>

  <%= form.submit class: "btn" %>

</div>

<% end %>