<%= form_with(model: [addressable, Address.new], local: true, class: "form") do |form| %>

<div class="field">
  <div class="label-div">
    <%= form.label :street_number, class: "label"  %>
  </div>
  <div class="input-div">
    <%= form.text_field :street_number, placeholder: "Street Number", required: true, class: "input", pattern: '\d+' %>
  </div>
</div>

<div class="field">
  <div class="label-div">
  <%= form.label :street_name, class: "label"  %>
</div>
<div class="input-div">
<%= form.text_field :street_name, placeholder: "Street Name", required: true, class: "input", pattern: '\s?[a-zA-Z]+\s[a-zA-Z]+' %>
</div>
</div>


<div class="field">
  <div class="label-div">
  <%= form.label :state, class: "label"  %>
</div>
<%= form.select(:state) do %>
  <% [['Queensland', 'QLD'], ['New South Wales', 'NSW'], ['Victoria', 'VIC'], ['Tasmania', 'TAS'], ['Australian Capital Territory', 'ACT'], ['Northern Territory', 'NT'], ['South Australia', 'SA'], ['Western Australia', 'WA']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
  <% end %>
<% end %>
</div>


<div class="field">
  <div class="label-div">
  <%= form.label :postcode, class: "label"  %>
</div>
<div class="input-div">
<%= form.text_field :postcode, placeholder: "Enter a 4 digit postcode", required: true, class: "input", pattern: '\d{4}' %>
</div>
</div>





<div class="md:flex md:items-center">
  <div class="md:w-1/3"></div>
  <div class="md:w-2/3">
    <%= form.submit class: "btn" %>
  </div>
</div>


<% end %>

