<%= form_with(model: @job, local: true, class: "form") do |form| %>

<div class="field">
  <div class="label-div">
    <%= form.label :number_of_animals, class: "label"  %>
  </div>
  <div class="input-div">
    <%= form.number_field :head, required: true, min: 0, class: "input" %>
  </div>
</div>

<div class="field">
  <div class="label-div">
    <%= form.label :estimated_weight, class: "label"  %>
  </div>
  <div class="input-div">
    <%= form.number_field :weight, required: true, min: 0, class: "input" %>
  </div>
</div>

<div class="field">
    <div class="label-div">
        <%= form.label :instructions, class: "label"  %>
    </div>
    <div class="input-div">
        <%= form.text_area :instructions, placeholder: "Job instructions", required: false, class: "input" %>
    </div>
</div>

<h1 class="text-2xl font-bold mb-6 text-white">Origin</h1>
<%= form.fields_for :addresses do |origin_form| %>
<div class="field">
  <div class="label-div">
    <%= origin_form.label :street_number, class: "label"  %>
  </div>
  <div class="input-div">
    <%= origin_form.text_field :street_number, placeholder: "Street Number", required: true, class: "input", pattern: '\d+' %>
  </div>
</div>

<div class="field">
  <div class="label-div">
  <%= origin_form.label :street_name, class: "label"  %>
</div>
<div class="input-div">
<%= origin_form.text_field :street_name, placeholder: "Street Name", required: true, class: "input", pattern: '\s?[a-zA-Z]+\s[a-zA-Z]+' %>
</div>
</div>



<div class="field">
  <div class="label-div">
  <%= origin_form.label :state, class: "label"  %>
</div>
<%= origin_form.select(:state) do %>
  <% [['Queensland', 'QLD'], ['New South Wales', 'NSW'], ['Victoria', 'VIC'], ['Tasmania', 'TAS'], ['Australian Capital Territory', 'ACT'], ['Northern Territory', 'NT'], ['South Australia', 'SA'], ['Western Australia', 'WA']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
  <% end %>
<% end %>
</div>



<div class="field">
  <div class="label-div">
  <%= origin_form.label :postcode, class: "label"  %>
</div>
<div class="input-div">
<%= origin_form.text_field :postcode, placeholder: "Enter a 4 digit postcode", required: true, class: "input", pattern: '\d{4}' %>
</div>
</div>




<% end %>

<h1 class="text-2xl font-bold mb-6 text-white">Destination</h1>
<%= form.fields_for :addresses do |destination_form| %>
<div class="field">
  <div class="label-div">
    <%= destination_form.label :street_number, class: "label"  %>
  </div>
  <div class="input-div">
    <%= destination_form.text_field :street_number, placeholder: "Street Number", required: true, class: "input", pattern: '\d+' %>
  </div>
</div>

<div class="field">
  <div class="label-div">
  <%= destination_form.label :street_name, class: "label"  %>
</div>
<div class="input-div">
<%= destination_form.text_field :street_name, placeholder: "Street Name", required: true, class: "input", pattern: '\s?[a-zA-Z]+\s[a-zA-Z]+' %>
</div>
</div>

<div class="field">
  <div class="label-div">
  <%= destination_form.label :state, class: "label"  %>
</div>
<%= destination_form.select(:state) do %>
  <% [['Queensland', 'QLD'], ['New South Wales', 'NSW'], ['Victoria', 'VIC'], ['Tasmania', 'TAS'], ['Australian Capital Territory', 'ACT'], ['Northern Territory', 'NT'], ['South Australia', 'SA'], ['Western Australia', 'WA']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
  <% end %>
<% end %>
</div>


<div class="field">
  <div class="label-div">
  <%= destination_form.label :postcode, class: "label"  %>
</div>
<div class="input-div">
<%= destination_form.text_field :postcode, placeholder: "Enter a 4 digit postcode", required: true, class: "input", pattern: '\d{4}' %>
</div>
</div>


<% end %>



<div class="md:flex md:items-center">
  <div class="md:w-1/3"></div>
  <div class="md:w-2/3">
    <%= form.submit class: "btn" %>
  </div>
</div>

<% end %>