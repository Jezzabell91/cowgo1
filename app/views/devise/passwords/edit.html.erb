<div class="max-w-lg m-auto">
  <h1 class="text-3xl font-bold mb-6 text-white">Change your password</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <div class="label-div">
    <%= f.label :password, "New password", class: "label" %></div>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="input-div">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
  </div></div>

  <div class="field">
    <div class="label-div">
    <%= f.label :password_confirmation, "Confirm new password", class: "label" %></div>
    <div class="input-div">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
  </div></div>

  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-1/2">
    <%= f.submit "Change my password", class: "btn" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>