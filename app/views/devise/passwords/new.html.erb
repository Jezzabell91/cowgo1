
<div class="max-w-lg m-auto">
  <h1 class="text-3xl font-bold mb-6 text-white">Forgot your password?</h1>
  
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="label-div">
    <%= f.label :email, class: "label" %>
  </div>
  <div class="input-div">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div></div>

  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-1/2">
    <%= f.submit "Send me reset password instructions", class: "btn" %>
  </div>
  </div>
<% end %>

</div>