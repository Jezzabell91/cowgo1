<div class="max-w-lg m-auto">
  <h1 class="text-3xl font-bold mb-6 text-white">Login</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
  <div class="field">
    <div class="label-div">
    <%= f.label :email, class: "label" %></div>
    <div class="input-div">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div></div>

  <div class="field">
    <div class="label-div">
    <%= f.label :password, class: "label" %></div>
    <div class="input-div">
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
  </div></div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "text-gray-400 font-thin" %>
    </div>
  <% end %>

  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
    <%= f.submit "Log in", class: "btn" %>
  </div>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-400 font-thin" %>
<% end %>

</div>